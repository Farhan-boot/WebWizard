@model WebWizard.Entities.MyWebWizardPortfolio

@{
    ViewBag.Title = "Single";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    var imagePath = "/WebWizardAssets/WebWizardPortfolio/" + Model.WebWizardId + "/ImageThumbnail/" + Model.ProjectImagePath;
}


<div class="row" style="padding:20px">
    <div class="col-md-10">
        <!-- Box Comment -->
        <div class="box box-widget">
            <div class="box-header with-border">
                <div class="user-block">
                    <img class="img-circle" src="~/Assets/images/Zip-File.png" alt="User Image">
                    <span class="username"><a href="#"> @Html.DisplayFor(model => model.ProjectTitle)</a></span>
                    <span class="description">Shared -  @Html.DisplayFor(model => model.CreateDate)</span>
                </div>
                <!-- /.user-block -->
                <div class="box-tools">
                    <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="" data-original-title="Mark as read">
                        <i class="fa fa-circle-o"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                </div>
                <!-- /.box-tools -->
            </div>
            <!-- /.box-header -->
            <div class="box-body" style="padding:10px">
                <img class="img-responsive pad" src="@imagePath" alt="Photo">
                <p> @Html.DisplayFor(model => model.ProjectDescription)</p>
                <a href="@Html.DisplayFor(model => model.LiveDemoLink)" class="btn btn-default btn-xs">Live Demo</a>
                @if (Convert.ToBoolean(@Html.Encode(Model.IsFreeDownload)) == true)
                {
                    <a href="/WebWizardAssets/WebWizardPortfolio/@Html.DisplayFor(model => model.WebWizardId)/@Html.DisplayFor(model => model.ProjectZipFilePath)" class="btn btn-default btn-xs">Download File</a>
                }
                <span class="pull-right text-muted">Size: @Html.DisplayFor(model => model.ProjectSize) - KB</span>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>







