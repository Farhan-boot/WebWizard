@model WebWizard.Models.ClientNewsFeedDetails

@{
    ViewBag.Title = "ClientNewsFeedDetails";
    Layout = "~/Views/Shared/_LayoutWebWizard.cshtml";
}

<section class="content" ng-app="NewsFeedApp" ng-controller="NewsFeedCtrl">
    <div class="callout callout-info">
        <h4>@Html.DisplayFor(model => model.Title) <small class="label label-success"><i class="fa fa-dollar"></i> @Html.DisplayFor(model => model.Amount)</small></h4>
        <label>Post Date:  @Html.DisplayFor(model => model.PostDate)</label>
        <div>
            <small class="label label-warning"><i class="fa fa-clock-o"></i>   @Html.DisplayFor(model => model.GroupName)</small>
            <small class="label label-warning"><i class="fa fa-clock-o"></i> @Html.DisplayFor(model => model.ProjectType)</small>
            <small class="label label-warning"><i class="fa fa-clock-o"></i>    @Html.DisplayFor(model => model.Technology)</small>
            <small class="label label-warning"><i class="fa fa-clock-o"></i>   @Html.DisplayFor(model => model.BackendLanguage)</small>
            <small class="label label-warning"><i class="fa fa-clock-o"></i>   @Html.DisplayFor(model => model.RunOnServer)</small>
        </div>
        <p>
            @Html.Raw(Model.PostContent)
        </p>
    </div>
    <!-- Default box -->
    <button type="button" ng-click="modalBid(newsFeeds.Id=@Model.Id)" class="btn bg-navy margin" data-toggle="modal" data-target="#modal-bid">Apply</button>
    <!-- /.modal -->
    <div class="modal modal-warning fade" id="modal-bid">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Set Your Price On Project Proposal</h4>
                </div>

                <div class="modal-body" style="color:black!important">
                    <label>Your Price:</label>
                    <div><input ng-model="newsfeedBid.BidAmount" type="number" style="width:100%" /></div><hr />
                    <label>Proposal Description:</label>
                    <div><textarea ng-model="newsfeedBid.BidContent" style="width:100%;min-height:300px"></textarea></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button ng-click="newsFeedBidForClient(newsfeedBid)" type="button" class="btn btn-outline">Submit</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
</section>


<script src="~/Scripts/AngularControllers/NewsFeedController.js"></script>