@{
    ViewBag.Title = "MyNewsFeed";
    Layout = "~/Views/Shared/_LayoutWebWizard.cshtml";
}


<div ng-app="NewsFeedApp" ng-cloak ng-controller="NewsFeedCtrl">
    <div class="content-header">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-aqua">
                    <span class="info-box-icon"><i class="fa fa-user"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total Wizard</span>
                        <span class="info-box-number">{{newsFeedCounter.TotalWizard}}</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">

                        </span>
                    </div>

                </div>

            </div>

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-green">
                    <span class="info-box-icon"><i class="fa fa-user-plus"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total Client</span>
                        <span class="info-box-number">{{newsFeedCounter.TotalClient}}</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">

                        </span>
                    </div>

                </div>
                <!-- /.info-box -->
            </div>

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-yellow">
                    <span class="info-box-icon"><i class="fa fa-file"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Total Project</span>
                        <span class="info-box-number">{{newsFeedCounter.TotalProject}}</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">

                        </span>
                    </div>

                </div>

            </div>

            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-red">
                    <span class="info-box-icon"><i class="fa fa-comments-o"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">Comments</span>
                        <span class="info-box-number">41,410</span>

                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                            70% Increase in 30 Days
                        </span>
                    </div>

                </div>

            </div>

        </div>
    </div>

    <div class="content-header">

        <div class="row">
            <div class="col-xs-12">
                <div class="nav-tabs-custom" style="box-shadow:none">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#fa-icons" data-toggle="tab" aria-expanded="true">Wizard News Feed</a></li>
                        <li class=""><a href="#glyphicons" data-toggle="tab" aria-expanded="false">Client News Feed</a></li>
                        <!--Other section menu-->
                        <li class=""><a href="#allWizard" data-toggle="tab" aria-expanded="false">All Wizard</a></li>
                        <li class=""><a href="#allClient" data-toggle="tab" aria-expanded="false">All Client</a></li>
                        <li class=""><a href="#allProject" data-toggle="tab" aria-expanded="false">All Project</a></li>
                    </ul>
                    <div class="tab-content" style="background-color:#ecf0f5">
                        <!-- Web -->
                        <div class="tab-pane active" id="fa-icons">

                            <div class="col-md-12" style="padding-top:5px" ng-repeat="newsFeeds in dishesPageList">
                                <!-- Box Comment -->
                                <div class="box box-widget">
                                    <div class="box-header with-border">
                                        <div class="user-block">

                                            <img class="img-circle" src="{{newsFeeds.WebWizardProfileImageUrl}}" alt="User Image">
                                            <span class="username"><a href="#">{{newsFeeds.FirstName}} {{newsFeeds.LastName}}</a></span>
                                            <span class="description">{{newsFeeds.Email}}</span>
                                            <span class="description">{{newsFeeds.PostDate}}</span>
                                        </div>

                                        <div class="box-tools">
                                            <button type="button" class="btn btn-box-tool" data-toggle="tooltip" title="" data-original-title="Mark as read">
                                                <i class="fa fa-circle-o"></i>
                                            </button>
                                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                        </div>

                                    </div>

                                    <div class="box-body" style="padding: 10px;">

                                        <h4>{{newsFeeds.Title}}</h4><hr />


                                        <p ng-bind-html="newsFeeds.PostContent | limitTo:numLimit">

                                        </p>
                                        <button type="button" ng-click="readMore()" class="btn btn-default btn-xs">More <i class="fa fa-arrow-down"></i></button>


                                        <div class="input-group" style="padding-top:10px">
                                            <input class="form-control" placeholder="Type comment...">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-success"><i class="fa fa-comment"></i></button>
                                            </div>
                                        </div>

                                        <hr />

                                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
                                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                                        <span class="pull-right text-muted">45 likes - 2 comments</span>
                                    </div>

                                </div>


                            </div>
                            <hr />
                            <div class="col-md-12" style="padding-bottom: 15px;">
                                <input class="pull-left" type="button" value="Previous" ng-click="newPageNumber=newPageNumber-1;getData(newPageNumber)" />
                                <input class="pull-right" type="button" value="Next" ng-click="newPageNumber=newPageNumber+1;getData(newPageNumber)" />
                            </div><hr />

                        </div>


                        <div class="tab-pane" id="glyphicons">
                            @*Client Newsfeed*@

                            <div class="col-md-12" style="padding-top:5px" ng-repeat="newsFeeds in dishesPageListForClient">

                                <div class="box box-widget">
                                    <div class="box-header with-border">
                                        <div class="user-block">
                                            <img class="img-circle" src="{{newsFeeds.WebWizardProfileImageUrl}}" alt="User Image">
                                            <span class="username"><a href="#">{{newsFeeds.FirstName}} {{newsFeeds.LastName}}</a></span>
                                            <span class="description">{{newsFeeds.Email}}</span>
                                            <span class="description" style="float: right;">{{newsFeeds.PostDate}}</span>
                                        </div>

                                        <div class="box-tools">
                                            <span class="label label-info pull-right" style="font-size:20px">${{newsFeeds.Amount}}</span>
                                        </div>

                                    </div>

                                    <div class="box-body" style="padding: 10px;">

                                        <h4>{{newsFeeds.Title}}</h4>

                                        <div class="row" style="text-align:center;padding-left: 5px;">
                                            <div class="col-md-2">
                                                <div class="box box-warning box-solid">
                                                    <div class="box-header with-border" style="padding:2px">
                                                        <h3 class="box-title">Work Type</h3>
                                                    </div>

                                                    <div class="box-body" style="">
                                                        {{newsFeeds.GroupName}}
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-md-2">
                                                <div class="box box-warning box-solid">
                                                    <div class="box-header with-border" style="padding:2px">
                                                        <h3 class="box-title">Project Type</h3>
                                                    </div>

                                                    <div class="box-body" style="">
                                                        {{newsFeeds.ProjectType}}
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-md-3">
                                                <div class="box box-warning box-solid">
                                                    <div class="box-header with-border" style="padding:2px">
                                                        <h3 class="box-title">Backend Language</h3>
                                                    </div>

                                                    <div class="box-body" style="">
                                                        {{newsFeeds.BackendLanguage}}
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-md-2">
                                                <div class="box box-warning box-solid">
                                                    <div class="box-header with-border" style="padding:2px">
                                                        <h3 class="box-title">Server Name</h3>
                                                    </div>

                                                    <div class="box-body" style="">
                                                        {{newsFeeds.RunOnServer}}
                                                    </div>

                                                </div>

                                            </div>
                                            <div class="col-md-3">
                                                <div class="box box-warning box-solid">
                                                    <div class="box-header with-border" style="padding:2px">
                                                        <h3 class="box-title">Which Technology Use</h3>
                                                    </div>

                                                    <div class="box-body" style="">
                                                        {{newsFeeds.Technology}}
                                                    </div>

                                                </div>

                                            </div>
                                        </div>


                                        <p ng-bind-html="newsFeeds.PostContent | limitTo:numLimit"></p>
                                        <button type="button" ng-click="readMore()" class="btn btn-default btn-xs">More <i class="fa fa-arrow-down"></i></button>
                                        <div class="row">
                                            <div class="col-md-12 pull-right" style="text-align:right">
                                                <a class="btn bg-yellow margin" href="@Url.Action("ClientNewsFeedDetails","NewsFeed")?id={{newsFeeds.Id}}">Details</a>
                                                <button type="button" ng-click="modalBid(newsFeeds.Id)" class="btn bg-navy margin" data-toggle="modal" data-target="#modal-bid">Apply</button>
                                            </div>
                                        </div>
                                        <hr style="margin-top: 0px;margin-bottom: 10px;" />
                                        <!--
                                        <div class="input-group" style="padding-top:10px">
                                            <input class="form-control" placeholder="Type comment...">
                                            <div class="input-group-btn">
                                                <button type="button" class="btn btn-success"><i class="fa fa-comment"></i></button>
                                            </div>
                                        </div>
                                            -->
                                        <!-- Social sharing buttons -->
                                        <!--
                                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
                                        <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                                        <span class="pull-right text-muted">45 likes - 2 comments</span>
                                            -->
                                    </div>

                                </div>

                                <!-- box -->
                            </div>
                            <hr />
                            <div class="col-md-12" style="padding-bottom: 15px;">
                                <input class="pull-left" type="button" value="Previous" ng-click="newPageNumberForClient=newPageNumberForClient-1;getDataForClient(newPageNumberForClient)" />
                                <input class="pull-right" type="button" value="Next" ng-click="newPageNumberForClient=newPageNumberForClient+1;getDataForClient(newPageNumberForClient)" />
                            </div><hr />

                        </div>

                        <div class="tab-pane" id="allWizard">

                            @*allWizard*@
                            <div class="row">

                                <div class="col-md-4" ng-repeat="allWizards in allWizardExceptMeDishesPageList">
                                    <!-- Widget: user widget style 1 -->
                                    <div class="box box-widget widget-user-2">
                                        <!-- Add the bg color to the header using any of the bg-* classes -->
                                        <div class="widget-user-header bg-yellow">
                                            <div class="widget-user-image">
                                                <img class="img-circle" src="/Assets/WebWizardDashboard/ProfileImage/{{allWizards.WebWizardProfileImageUrl}}" alt="User Avatar">
                                            </div>
                                            <!-- /.widget-user-image -->
                                            <h3 class="widget-user-username">{{allWizards.FirstName}} {{allWizards.LastName}}</h3>
                                            <h5 class="widget-user-desc">{{allWizards.Email}}</h5>
                                        </div>
                                        <div class="box-footer no-padding">
                                            <ul class="nav nav-stacked">
                                                <li><a href="#">{{allWizards.WebWizardMobileNo}}</a></li>
                                                <li><a href="#"><p>{{allWizards.AboutWebWizard | limitTo : 35}}</p> </a></li>

                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.widget-user -->
                                </div>
                                <hr />
                                <div class="col-md-12" style="padding-bottom: 15px;">
                                    <input class="pull-left" type="button" value="Previous" ng-click="newPageNumber2=newPageNumber2-1;getData2(newPageNumber2)" />
                                    <input class="pull-right" type="button" value="Next" ng-click="newPageNumber2=newPageNumber2+1;getData2(newPageNumber2)" />
                                </div><hr />
                            </div>

                        </div>
                        <div class="tab-pane" id="allClient">
                            @*allClient*@

                            <div class="row">

                                <div class="col-md-4" ng-repeat="allClients in allClientDishesPageList">
                                    <!-- Widget: user widget style 1 -->
                                    <div class="box box-widget widget-user-2">
                                        <!-- Add the bg color to the header using any of the bg-* classes -->
                                        <div class="widget-user-header bg-yellow">
                                            <div class="widget-user-image">
                                                <img class="img-circle" src="/ClientAssets/ClientDashboard/ProfileImage/{{allClients.ClientProfileImageUrl}}" alt="User Avatar">
                                            </div>
                                            <!-- /.widget-user-image -->
                                            <h3 class="widget-user-username">{{allClients.FirstName}} {{allClients.LastName}}</h3>
                                            <h5 class="widget-user-desc">{{allClients.ClientEmail}}</h5>
                                        </div>
                                        <div class="box-footer no-padding">
                                            <ul class="nav nav-stacked">
                                                <li><a href="#">{{allClients.ClientMobileNo}}</a></li>
                                                <li><a href="#"><p>{{allClients.AboutClient | limitTo : 35}}</p> </a></li>

                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.widget-user -->
                                </div>
                                <hr />
                                <div class="col-md-12" style="padding-bottom: 15px;">
                                    <input class="pull-left" type="button" value="Previous" ng-click="newPageNumber4=newPageNumber4-1;getData4(newPageNumber4)" />
                                    <input class="pull-right" type="button" value="Next" ng-click="newPageNumber4=newPageNumber4+1;getData4(newPageNumber4)" />
                                </div><hr />
                            </div>









                        </div>
                        <div class="tab-pane" id="allProject">
                            @*allProject*@
                            <div class="row">
                                <div class="box-title col-md-9 cal-sm-6">
                                </div>
                                <div class="box-tools col-md-3  cal-sm-6">
                                    <div class="input-group input-group-sm" style="width: 150px;">
                                        <input ng-model="title" type="text" name="table_search" class="form-control pull-right ng-pristine ng-untouched ng-valid ng-empty" placeholder="Search">
                                        <div class="input-group-btn">
                                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div><hr />
                            <div class="row">
                                <div class="col-md-4" ng-repeat="allWizardProjec in AllWizardProjecExceptMyProjecsPageList | filter : title">
                                    <!-- Widget: user widget style 1 -->
                                    <div class="box box-widget widget-user">
                                        <!-- Add the bg color to the header using any of the bg-* classes -->
                                        <div class="widget-user-header bg-black" style="background: url('/WebWizardAssets/WebWizardPortfolio/{{allWizardProjec.WebWizardId}}/ImageThumbnail/{{allWizardProjec.ProjectImagePath}}') center center;">

                                        </div>
                                        <div class="widget-user-image">
                                            <img class="img-circle" src="/Assets/images/Zip-File.png" alt="User Avatar">
                                        </div>
                                        <div class="box-footer">
                                            <div class="row">
                                                <div class="col-sm-4 border-right">
                                                    <div class="description-block">
                                                        <h5 class="description-header">Size</h5>
                                                        <span class="description-text ng-binding">{{allWizardProjec.ProjectSize}}</span>
                                                    </div>
                                                    <!-- /.description-block -->
                                                </div>
                                                <!-- /.col -->
                                                <div class="col-sm-4 border-right">
                                                    <div class="description-block">
                                                        <a class="btn btn-success btn-sm" target="_blank" href="{{allWizardProjec.LiveDemoLink}}">Demo</a>
                                                    </div>
                                                    <!-- /.description-block -->
                                                </div>
                                                <!-- /.col -->
                                                <div class="col-sm-4">
                                                    <div class="description-block" ng-if="allWizardProjec.IsFreeDownload===true">
                                                        <a class="btn btn-primary btn-sm" target="_blank" href="/WebWizardAssets/WebWizardPortfolio/{{allWizardProjec.WebWizardId}}/{{allWizardProjec.ProjectZipFilePath}}">Download</a>
                                                    </div>
                                                    <!-- /.description-block -->
                                                </div>
                                                <!-- /.col -->
                                            </div>
                                            <!-- /.row -->
                                        </div>
                                        <div class="box-footer no-padding">
                                            <ul class="nav nav-stacked" style="padding-left:5px">
                                                <li><h4 style="font-weight:bold" class="ng-binding"> {{allWizardProjec.ProjectTitle| limitTo : 15}}</h4></li>
                                                <li><p style="font-weight:bold" class="ng-binding"> {{allWizardProjec.ProjectDescription| limitTo : 36}}</p></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /.widget-user -->
                                </div>
                            </div>

                            <hr />
                            <div class="col-md-12" style="padding-bottom: 15px;">
                                <input class="pull-left" type="button" value="Previous" ng-click="newPageNumber3=newPageNumber3-1;getData3(newPageNumber3)" />
                                <input class="pull-right" type="button" value="Next" ng-click="newPageNumber3=newPageNumber3+1;getData3(newPageNumber3)" />
                            </div><hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- /.modal -->
    <div class="modal modal-warning fade" id="modal-bid">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Set Your Price On Project Proposal</h4>
                </div>

                <div class="modal-body" style="color:black!important">
                    <label>Your Price:</label>
                    <div><input ng-model="newsfeedBid.BidAmount" type="number" style="width:100%" /></div><hr />
                    <label>Proposal Description:</label>
                    <div><textarea ng-model="newsfeedBid.BidContent" style="width:100%;min-height:300px"></textarea></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
                    <button ng-click="newsFeedBidForClient(newsfeedBid)" type="button" class="btn btn-outline">Submit</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->


</div>
<script src="~/Scripts/AngularControllers/NewsFeedController.js"></script>



