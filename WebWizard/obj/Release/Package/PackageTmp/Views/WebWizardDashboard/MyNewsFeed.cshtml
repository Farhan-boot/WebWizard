
@{
    ViewBag.Title = "MyNewsFeed";
    Layout = "~/Views/Shared/_LayoutWebWizard.cshtml";
}

<div class="content-header" ng-app="WebWizardProfileApp" ng-controller="WebWizardProfileCtrl">
    <div class="row">
        <div class="col-xs-12">
            <div class="nav-tabs-custom" style="box-shadow:none">
                <div class="tab-content" style="background-color:#ecf0f5">
                    <!-- Web -->
                    <div class="tab-pane active" id="fa-icons">

                        <!-- ngRepeat: newsFeeds in dishesPageList --><div class="col-md-12 ng-scope" style="padding-top:5px" ng-repeat="newsFeeds in newsFeedList">
                            <!-- Box Comment -->
                            <div class="box box-widget">
                                <div class="box-header with-border">
                                    <div class="user-block">

                                        <img class="img-circle" src="@Session["WebWizardProfileImageUrl"].ToString()" alt="User Image">
                                        <span class="username"><a href="#" class="ng-binding">@Session["FullName"].ToString()</a></span>
                                        <span class="description ng-binding">@Session["Email"].ToString()</span>
                                        <span class="description ng-binding">{{newsFeeds.PostDate}}</span>
                                    </div>
                                    <!-- /.user-block -->
                                    <div class="box-tools">
                                        <button  ng-click="deleteNewsFeedItem(newsFeeds.Id)"  type="button" class="btn btn-box-tool" data-toggle="tooltip" title="" data-original-title="Mark as read">
                                            <i class="fa fa-remove"></i>
                                        </button>
                                    </div>
                                    <!-- /.box-tools -->
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body" style="padding: 10px;">
                                    <!-- post Title -->
                                    <h4 class="ng-binding">{{newsFeeds.Title}}</h4><hr>

                                    <!-- post text -->
                                    <p ng-bind-html="newsFeeds.PostContent | limitTo:numLimit" class="ng-binding"><p></p>
                                    </p>
                                    <button type="button" ng-click="readMore()" class="btn btn-default btn-xs">More <i class="fa fa-arrow-down"></i></button>


                                    <div class="input-group" style="padding-top:10px">
                                        <input class="form-control" placeholder="Type comment...">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-success"><i class="fa fa-comment"></i></button>
                                        </div>
                                    </div>

                                    <hr>
                                    <!-- Social sharing buttons -->
                                    <button type="button" class="btn btn-default btn-xs"><i class="fa fa-share"></i> Share</button>
                                    <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                                    <span class="pull-right text-muted">45 likes - 2 comments</span>
                                </div>
                            </div>

                            <!-- /.box -->
                        </div><!-- end ngRepeat: newsFeeds in dishesPageList -->
                        <hr>
                        <div class="col-md-12" style="padding-bottom: 15px;">
                            <input class="pull-left" type="button" value="Previous" ng-click="newPageNumber=newPageNumber-1;getData(newPageNumber)">
                            <input class="pull-right" type="button" value="Next" ng-click="newPageNumber=newPageNumber+1;getData(newPageNumber)">
                        </div><hr>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/AngularControllers/WebWizardProfileController.js"></script>