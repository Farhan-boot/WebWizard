
@{
    ViewBag.Title = "WizerdLogIn";
    Layout = "~/Views/Shared/_LayoutMobileLogIn.cshtml";
}

<!-- Main Wrapper -->


<div class="nav-tabs-custom" style="box-shadow:none">
  
    <div class="tab-content" style="background-color:#ecf0f5">

        <ul class="nav nav-tabs" style="display: flex;align-items: center;justify-content: center;">
            <li class=""><a class="btn btn-primary btn-sm" href="#clientLogin" data-toggle="tab" aria-expanded="false">Client Login</a></li>
            <li class="active"><a class="btn btn-primary btn-sm" href="#wizerdLogin" data-toggle="tab" aria-expanded="true">Wizerd Login</a></li>
        </ul>



        <!-- Web -->
        <div class="tab-pane" id="clientLogin">

            <!-- Page Content -->
            <div class="content align-items-center">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-8 offset-md-2">

                            <!-- Login Tab Content -->
                            <div class="account-content">
                                <div class="row align-items-center justify-content-center">
                                    <div class="col-md-12 col-lg-6 login-right">
                                        <div class="login-header">
                                            <a href="index.html">
                                                <img src="~/Assets/images/footerlogo.png" alt="" class="header_image">
                                            </a>
                                        </div>
                                        <form action="">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input class="form-control form-control-lg group_formcontrol" name="new-chat-title" type="email" placeholder="Enter your email">
                                            </div>
                                            <div class="form-group">
                                                <label for="new-chat-topic">Password</label>
                                                <input class="form-control form-control-lg group_formcontrol" name="new-chat-topic" id="new-chat-topic" type="text" placeholder="Enter your password">
                                            </div>
                                            <div class="pt-1">
                                                <div class="text-center">
                                                    <button class="btn newgroup_create btn-block d-block w-100">Login</button>
                                                    <span class="forgot-link">
                                                        <a href="forgot-password.html" class="text-right">Forgot Password ?</a>
                                                    </span>
                                                </div>
                                            </div>
                                        </form>
                                        <div class="login-or">
                                            <span class="or-line"></span>
                                            <span class="span-or">or</span>
                                        </div>
                                        <div class="row form-row social-login">
                                            <div class="col-6">
                                                <a href="https://www.facebook.com/" target="_blank" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f mr-1"></i> Login</a>
                                            </div>
                                            <div class="col-6">
                                                <a href="https://mail.google.com/" class="btn btn-google btn-block" target="_blank"><i class="fab fa-google mr-1"></i> Login</a>
                                            </div>
                                        </div>
                                        <div class="text-center dont-have">Don’t have an account? <a href="register.html">Register</a></div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Login Tab Content -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Page Content -->

        </div>

        <!-- Client-->
        <div class="tab-pane active" id="wizerdLogin">

            <!-- Page Content -->
            <div class="content align-items-center">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-8 offset-md-2">

                            <!-- Login Tab Content -->
                            <div class="account-content">
                                <div class="row align-items-center justify-content-center">
                                    <div class="col-md-12 col-lg-6 login-right">
                                        <div class="login-header">
                                            <a href="index.html">
                                                <img src="images/logo.png" alt="" class="header_image">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input id="email" class="form-control form-control-lg group_formcontrol" type="email" placeholder="Enter your email">
                                            </div>
                                            <div class="form-group">
                                                <label for="new-chat-topic">Password</label>
                                                <input id="password" class="form-control form-control-lg group_formcontrol" type="text" placeholder="Enter your password">
                                            </div>
                                            <div class="pt-1">
                                                <div class="text-center">
                                                    <button class="btn newgroup_create btn-block d-block w-100" type="submit" onclick="logIn()">Login</button>
                                                    <span class="forgot-link">
                                                        <a href="forgot-password.html" class="text-right">Forgot Password ?</a>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="login-or">
                                            <span class="or-line"></span>
                                            <span class="span-or">or</span>
                                        </div>
                                        <div class="row form-row social-login">
                                            <div class="col-6">
                                                <a href="https://www.facebook.com/" target="_blank" class="btn btn-facebook btn-block"><i class="fab fa-facebook-f mr-1"></i> Login</a>
                                            </div>
                                            <div class="col-6">
                                                <a href="https://mail.google.com/" class="btn btn-google btn-block" target="_blank"><i class="fab fa-google mr-1"></i> Login</a>
                                            </div>
                                        </div>
                                        <div class="text-center dont-have">Don’t have an account? <a href="register.html">Register</a></div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Login Tab Content -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Page Content -->


        </div>

    </div>
</div>




